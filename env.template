# =============================================================================
# LIVEKIT CONFIGURATION (Required)
# =============================================================================
# Get from: https://cloud.livekit.io/
# Steps: Create account → Create project → Settings → Keys

LIVEKIT_URL=wss://your-project-name.livekit.cloud
LIVEKIT_API_KEY=APIxxxxxxxxxxxxxxxxx
LIVEKIT_API_SECRET=secretxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx


# =============================================================================
# AI PROVIDERS (Required)
# =============================================================================

# OpenAI (for LLM and TTS)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Deepgram (for Speech-to-Text)
# Get from: https://console.deepgram.com/
DEEPGRAM_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx


# =============================================================================
# FLASK CONFIGURATION (Optional)
# =============================================================================

# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=true

# Flask Port (default: 5000)
FLASK_PORT=5000


# =============================================================================
# INTERVIEW STAGE SETTINGS (Optional - has defaults)
# =============================================================================

# Stage 1: Self-Introduction max duration (seconds)
STAGE_INTRO_DURATION=240

# Stage 2: Past Experience max duration (seconds)
STAGE_EXPERIENCE_DURATION=360

# Inactivity timeout before prompting (seconds)
INACTIVITY_TIMEOUT=15


# =============================================================================
# LOGGING (Optional)
# =============================================================================

# Log Level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable file logging
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/app.log


# =============================================================================
# NOTES
# =============================================================================
# 1. Only the first 4 variables are REQUIRED to run the app
# 2. Never commit this file with real credentials
# 3. Copy to .env and fill in your actual values
# 4. Keep .env in .gitignore
