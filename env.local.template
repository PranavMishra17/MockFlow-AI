# =============================================================================
# LIVEKIT CONFIGURATION (Frontend)
# =============================================================================
# Copy these values from your agent .env file
# These are safe to expose to the browser (NEXT_PUBLIC_ prefix)

# LiveKit WebSocket URL - MUST start with NEXT_PUBLIC_ to be accessible in browser
NEXT_PUBLIC_LIVEKIT_URL=wss://your-project-name.livekit.cloud

# LiveKit API Credentials - DO NOT expose with NEXT_PUBLIC_ prefix
# These are used server-side only for token generation
LIVEKIT_API_KEY=APIxxxxxxxxxxxxxxxxx
LIVEKIT_API_SECRET=secretxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx


# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# App Name
NEXT_PUBLIC_APP_NAME=InterviewFlow

# App Environment
NEXT_PUBLIC_APP_ENV=development
# Options: development, staging, production

# API Base URL (for future expansion)
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Agent WebSocket URL (if running locally)
NEXT_PUBLIC_AGENT_URL=ws://localhost:8080


# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_RECORDING=false
NEXT_PUBLIC_SHOW_DEBUG_INFO=true


# =============================================================================
# UI CONFIGURATION
# =============================================================================

# Theme
NEXT_PUBLIC_THEME=light
# Options: light, dark, system

# Branding
NEXT_PUBLIC_BRAND_COLOR=#3b82f6
NEXT_PUBLIC_COMPANY_NAME=InterviewFlow


# =============================================================================
# OPTIONAL: ANALYTICS & MONITORING
# =============================================================================

# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# PostHog
# NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry (Client-side)
# NEXT_PUBLIC_SENTRY_DSN=https://xxxxxx@xxxxx.ingest.sentry.io/xxxxxx


# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable verbose logging in console
NEXT_PUBLIC_DEBUG=true

# Mock API responses (for development without backend)
NEXT_PUBLIC_MOCK_API=false


# =============================================================================
# NOTES
# =============================================================================
# 1. Variables with NEXT_PUBLIC_ prefix are exposed to the browser
# 2. Never expose sensitive credentials with NEXT_PUBLIC_ prefix
# 3. LIVEKIT_API_KEY and LIVEKIT_API_SECRET should NOT have NEXT_PUBLIC_
# 4. Copy this to .env.local and fill in your actual values
# 5. Keep .env.local in .gitignore
